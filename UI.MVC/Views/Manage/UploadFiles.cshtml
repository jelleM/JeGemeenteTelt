@model BEP.BL.Models.UploadfileModel

@{
  ViewBag.Title = "UploadFiles";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row group-shadow">
        <div class="col-xs-12">
            <h1>Bestanden opladen</h1>
            <p class="subtitle-gray">Laad hier jouw gemeentebelastingen en begrotingen op.</p>
            @if (Model.Message != null)
            {
                <p class="text-danger">@Model.Message</p>
            }
            <hr/>

            <div class="form-group">
                <label>Gemeentebelastingen opladen:</label>
                <div>
                    @using (Html.BeginForm("UploadCityVAT", "Manage", FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <span class="btn btn-default btn-file">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span> Gemeentebelasting opladen <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" name="upload" id="file-tax" />
                        </span>
                        <input type="submit" value="Opladen" class="btn btn-primary"/>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Begrotingen opladen:</label>
                <div>
                    @using (Html.BeginForm("UploadBudgets", "Manage", FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <span class="btn btn-default btn-file">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span> Begrotingen opladen <input type="file" name="upload" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" id="file-budget" />
                        </span>
                        <input type="submit" value="Opladen" class="btn btn-primary"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
