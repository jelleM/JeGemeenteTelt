@model BEP.BL.Models.ChangeZipViewModel
@{
    ViewBag.Title = "Wijzig postcode";
}
@section head {
    <link rel="stylesheet" href="~/Content/manage-changezip.css" />
    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
}

<div class="container">
    <div class="row group-shadow">
        <div id="change-zip" class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    <h1>@ViewBag.Title</h1>
                    <p class="subtitle-gray">Wijzig hier uw huidige postcode.</p>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("ChangeZip", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Huidige postcode: </label>
                            </div>
                            <div class="col-sm-4">
                                <p><strong>@Model.Zip</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Nieuwe postcode: </label>
                            </div>
                            <div class="col-sm-4">
                                <form class="form-inline" action="~/Manage/ChangeZip" method="post">
                                    <div class="input-group">
                                        <input type="text" class="form-control search-city" name="postcode" placeholder="2000 Antwerpen">
                                        <span class="input-group-btn">
                                            <button id="search" type="submit" class="btn btn-primary">Wijzig</button>
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui.js" type="text/javascript"></script>
    <script type="text/javascript" async src="~/Scripts/search.js"></script>
}
